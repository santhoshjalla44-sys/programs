#include <iostream>
#include <string>
using namespace std;

int main() {
    string str;
    cout << "Enter a word: ";
    cin >> str;

    string rev = string(str.rbegin(), str.rend());

    if (str == rev)
        cout << "YES, Palindrome\n";
    else
        cout << "NO, Not a Palindrome\n";

    return 0;
}
